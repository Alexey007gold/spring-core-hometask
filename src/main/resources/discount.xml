<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="birthdayStrategy" class="ua.epam.spring.hometask.service.discount.strategy.BirthdayStrategy"/>
    <bean id="every10TicketStrategy" class="ua.epam.spring.hometask.service.discount.strategy.Every10TicketStrategy">
        <constructor-arg ref="userService"/>
    </bean>

    <bean id="discountService" class="ua.epam.spring.hometask.service.DiscountServiceImpl">
        <constructor-arg>
            <list>
                <ref bean="birthdayStrategy"/>
                <ref bean="every10TicketStrategy"/>
            </list>
        </constructor-arg>
    </bean>

</beans>