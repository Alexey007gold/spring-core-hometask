<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:auditoriums.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
    </bean>

    <bean id="userService" class="ua.epam.spring.hometask.service.UserServiceImpl"/>

    <bean id="eventService" class="ua.epam.spring.hometask.service.EventServiceImpl"/>

    <bean id="auditoriumService" class="ua.epam.spring.hometask.service.AuditoriumServiceImpl">
        <constructor-arg index="0" value="${auditorium.names}"/>
        <constructor-arg index="1" value="${auditorium.seatsNumber}"/>
        <constructor-arg index="2" value="${auditorium.vipSeats}"/>
    </bean>

</beans>